#include "main.h"

/**
 * rev_string - prints string in reverse
 * @s: string
 * Return: void
 */

void rev_string(char *s)
{

int i = 0, total, half;
char first, last;
  
while (s[i] != '\0')
{
i++;
}

total = i - 1;
half = total / 2;

while (half >= 0)
{
first = s[total - half];
last = s[half];
s[half] = first;
s[total - half] = last;
half--;
}

}
